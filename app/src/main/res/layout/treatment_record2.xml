<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="80dp">
    <CheckedTextView xmlns:android="http://schemas.android.com/apk/res/android"

        android:id="@+id/rec_treatment_selected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Test"
        android:gravity="center"
        android:checked="false"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="30dp"
        android:drawableLeft="?android:attr/listChoiceIndicatorMultiple"
        />

    <TextView
        android:id="@+id/rec_treatment_tested_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tested:"
        android:textSize="15sp"
        android:textStyle="italic"
        android:layout_marginTop="18dp"
        android:layout_toRightOf="@id/rec_treatment_selected"/>

    <TextView
        android:id="@+id/rec_treatment_tested_text"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Test"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_marginTop="18dp"
        android:layout_toRightOf="@+id/rec_treatment_tested_label"/>

<!--    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#000000"
        android:layout_below="@id/rec_email_address_label">

    </View>-->
</RelativeLayout>