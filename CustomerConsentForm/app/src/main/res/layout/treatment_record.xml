<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="80dp">

    <CheckBox
        android:id="@+id/rec_treatment_selected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="false"
        android:focusable="false"
        android:clickable="false"
        android:focusableInTouchMode="false"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp" />
    <TextView
        android:id="@+id/rec_treatment_name_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Treatment Name:"
        android:textSize="15sp"
        android:textStyle="italic"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="18dp"
        android:layout_toRightOf="@+id/rec_treatment_selected"/>

    <TextView
        android:id="@+id/rec_treatment_name_text"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Test"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_marginTop="18dp"
        android:layout_toRightOf="@+id/rec_treatment_name_label"/>

    <TextView
        android:id="@+id/rec_treatment_tested_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tested:"
        android:textSize="15sp"
        android:textStyle="italic"
        android:layout_marginTop="18dp"
        android:layout_toRightOf="@id/rec_treatment_name_text"/>

    <TextView
        android:id="@+id/rec_treatment_tested_text"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Test"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_marginTop="18dp"
        android:layout_toRightOf="@+id/rec_treatment_tested_label"/>

<!--    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#000000"
        android:layout_below="@id/rec_email_address_label">

    </View>-->
</RelativeLayout>