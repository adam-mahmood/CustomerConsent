<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".activities.MainMenuAdminActivity"
    android:background="@drawable/abc_list_longpressed_holo">

    <!-- Login progress -->

    <ProgressBar
        android:id="@+id/main_menu_progress"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:visibility="gone"/>

    <GridLayout
        android:id="@+id/main_menu_form_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:baselineAligned="false"
        android:paddingTop="35dp"
        android:weightSum="1"
        android:columnCount="2"
        android:rowCount="3"
        android:alignmentMode="alignBounds"
        >


        <ImageButton
            android:layout_width="@dimen/main_menu_button_width"
            android:layout_height="@dimen/main_menu_button_height"
            android:id="@+id/image_button_search"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:background="@drawable/search_client"
            />

        <ImageButton
            android:layout_width="@dimen/main_menu_button_width"
            android:layout_height="@dimen/main_menu_button_height"
            android:id="@+id/image_button_create_new_customer"
            android:scaleType="fitCenter"
            android:background="@drawable/add_user_client"
            android:paddingBottom="-200dp"
            android:adjustViewBounds="true"
            android:layout_column="1"
            android:layout_row="0"/>

        <ImageButton
            android:layout_width="@dimen/main_menu_button_width"
            android:layout_height="@dimen/main_menu_button_height"
            android:id="@+id/image_button_sign_out"
            android:layout_marginRight="0dp"
            android:layout_margin="0dp"
            android:scaleType="fitCenter"
            android:visibility="visible"
            android:background="@drawable/logout_user_blue"
            android:adjustViewBounds="true"
            android:layout_column="0"
            android:layout_row="1"/>

        <ImageButton
            android:layout_width="@dimen/main_menu_button_width"
            android:layout_height="@dimen/main_menu_button_height"
            android:id="@+id/image_button_manage_accounts"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:background="@drawable/manage_staff_blue"
            android:textAlignment="gravity"
            android:textStyle="normal"
            android:textSize="19dp"
            android:layout_column="1"
            android:layout_row="1"/>

        <ImageButton
            android:layout_width="@dimen/main_menu_button_width"
            android:layout_height="@dimen/main_menu_button_height"
            android:text="New Button"
            android:id="@+id/button"
            android:layout_column="0"
            android:layout_row="2"
            android:background="#1640e4"
            android:src="@drawable/branch_button"/>

    </GridLayout>

</LinearLayout>
